<view class="info">
  <image src="/image/square.png" class="icon" mode="widthFix"></image>
  <view class="infotext">
    <view class="infotitle">{{ngo_name}}</view>
    <view class="manytag">
      <view class="tags">{{tag3}}</view>
      <view class="tags">{{tag4}}</view>
    </view>
    <view class="infocontent">{{position}}...等{{number_position}}个Project</view>
  </view>
</view>
<scroll-view scroll-x class="bg-white nav text-center mgntop">
  <view class="cu-item {{0==TabCur?'navi1':''}}" bindtap="tabSelect" data-id="0">
    <text class="{{0==TabCur?'text1':'text2'}}">组织介绍</text>
  </view>
  <view class="cu-item {{1==TabCur?'navi1':''}}" bindtap="tabSelect" data-id="1">
    <text class="{{1==TabCur?'text1':'text2'}}">热招需求</text>
  </view>
</scroll-view>
<block wx:if="{{TabCur==0}}">
  <view class="title2">组织介绍</view>
  <view class="content2">{{orgIntro}}</view>
  <view class="title3">组织相册</view>
  <image src="/image/Hackathon_Poster.jpeg" class="orgPhoto"></image>
  <view class="title3">组织官网</view>
  <view class="content2">{{orgWeb}}</view>
  <view class="title3">影响力</view>
  <view class="content2">{{orgInf}}</view>
  <view class="container">
    <button class="{{sub?'submit':'submitted'}}" bindtap="submit">{{sub?'投递简历':'已投递'}}</button>
  </view>
</block>