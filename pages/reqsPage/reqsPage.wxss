.navi1 {
    border-bottom: 7rpx solid;
    color: #EA6A6A;
}

.text1 {
    font-family: PingFang SC;
    font-style: normal;
    font-weight: 600;
    font-size: 18px;
    line-height: 25px;
    color: #000000;
}

.text2 {
    font-family: PingFang SC;
    font-style: normal;
    font-weight: 600;
    font-size: 18px;
    line-height: 25px;
    color: #4F4F4F;
}

.box {
    position: relative;
    width: 340px;
    height: 130px;
    margin-top: 30rpx;
    background: #FFFFFF;
    box-shadow: 0px 4px 14px rgba(189, 187, 187, 0.25);
    border-radius: 8px;
}

.title {
    font-family: PingFang SC;
    font-style: normal;
    font-weight: 500;
    font-size: 16px;
    line-height: 22px;
    color: #000000;
    margin: 30rpx;
}

.tag1 {
    width: 67px;
    height: 21px;
    background: #CFDBEC;
    border-radius: 4px;
    margin-left: 30rpx;
    text-align: center;
    font-family: PingFang SC;
    font-style: normal;
    font-weight: normal;
    font-size: 11px;
    line-height: 15px;
    color: #000000;
    padding-top: 7rpx;
}

.tagtext {
    font-family: PingFang SC;
    font-style: normal;
    font-weight: normal;
    font-size: 11px;
    line-height: 15px;
    display: flex;
    color: #000000;
}

.manytag {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.tag2 {
    width: 67px;
    height: 21px;
    background: #DEE0E3;
    border-radius: 4px;
    margin-left: 30rpx;
    text-align: center;
    font-family: PingFang SC;
    font-style: normal;
    font-weight: normal;
    font-size: 11px;
    line-height: 15px;
    color: #000000;
    padding-top: 7rpx;
}

.tagbottom {
    display: flex;
    flex-direction: row;
}
.avatar-wrap {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin-left: 30rpx;
    margin-right: 25rpx;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
}
.avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin-left: 25rpx;
    margin-right: 25rpx;
}

.name {
    font-family: PingFang SC;
    font-style: normal;
    font-weight: 300;
    font-size: 13px;
    line-height: 20px;
    color: #000000;
}

.location {
    position: absolute;
    right: 20rpx;
    color: #B2B2B2;
    font-size: 12px;
    line-height: 17px;
}

.bottom {
    margin-top: 25rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}